    </Bscmake>
    <Link>
      <SubSystem>Windows</SubSystem>
      <ProgramDatabaseFile>$(TargetDir)$(TargetName).pdb</ProgramDatabaseFile>
      <OutputFile>$(TargetDir)$(TargetName)$(TargetExt)</OutputFile>
      <ProfileGuidedDatabase>$(TargetDir)$(TargetName).pgd</ProfileGuidedDatabase>
      <AdditionalDependencies Condition="'$(PlatformToolset)'=='ClangCL'">
        ryml.lib;c4core.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Link>
  </ItemDefinitionGroup>
  <!-- Configuration-specific settings (Debug) -->
  <ItemDefinitionGroup Condition="'$(Configuration)'=='Debug'">
    <ClCompile>
